{
    "manifestVersion": 1,
    "id": "vsts-open-work-items-in-excel",
    "version": "0.1.20",
    "name": "VSTS Open in Excel",
    "scopes": [
        "vso.work",
        "vso.work_write"
    ],
    "description": "This extension opens work items and query results in Excel from Visual Studio Team Services",
    "publisher": "blueprint",
    "icons": {
        "default": "img/excellogo.png"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "excel",
        "office",
        "office integration",
        "workitem",
        "agile"
    ],
    "content": {
        "details": {
            "path": "details.md"
        }
    },
    "links": {
        "getstarted": {
            "uri": "https://aka.ms/open-in-excel"
        },
        "learn": {
            "uri": "https://aka.ms/open-in-excel"
        },
        "support": {
            "uri": "https://aka.ms/open-in-excel"
        }
    },
    "branding": {
        "color": "rgb(255, 255, 255)",
        "theme": "light"
    },
    "files": [
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "build",
            "addressable": true
        },
        {
            "path": "index.html",
            "addressable": true
        }
    ],
    "categories": [
        "Plan and track"
    ],
    "contributions": [
        {
            "id": "openQueryAction",
            "type": "ms.vss-work-web.action",
            "description": "Open in Excel",
            "targets": [
                "ms.vss-work-web.work-item-query-menu"
            ],
            "properties": {
                "text": "Open in Excel",
                "title": "Requires Visual Studio '15'",
                "uri": "index.html"
            }
        },
        {
            "id": "openWorkItemsAction",
            "type": "ms.vss-work-web.action-provider",
            "description": "Open in Excel",
            "targets": [
                "ms.vss-work-web.work-item-context-menu"
            ],
            "properties": {
                "text": "Open in Excel",
                "title": "Open in Excel",
                "icon": "img/miniexcellogo.png",
                "uri": "index.html"
            }
        },
        {
            "id": "openQueryOnToolbarAction",
            "type": "ms.vss-work-web.action",
            "description": "Open in Excel",
            "targets": [
                "ms.vss-work-web.work-item-query-results-toolbar-menu"
            ],
            "properties": {
                "text": "Open in Excel",
                "icon": "img/miniexcellogo.png",
                "uri": "index.html"
            }
        }
    ]
}